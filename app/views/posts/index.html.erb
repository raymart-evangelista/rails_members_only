<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<% @posts.each do |post| %>
  <div>
    <h3><%= post.title %></h3>
    <br>
    <p><%= post.content %></p>
    <% if user_signed_in? %>
      <p><%= "posted by: " %><%= post.user.email %></p>
    <% else %>
      <p><%= "posted by: anon" %></p>
    <% end %>
    
  </div>
<% end %>

<%= link_to "New Post", posts_new_path %>

